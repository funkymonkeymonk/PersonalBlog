    "gatsby-transformer-remark": "^2.8.7",
    "gatsby-transformer-sharp": "^2.5.2",
    "gray-matter": "^4.0.2",
    "lodash": "^4.17.15",
    "netlify-cms-app": "^2.12.13",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-helmet": "6.0.0",
    "react-redux": "^7.2.0",
    "react-scripts": "^3.4.1",
    "redux-devtools-extension": "^2.13.8",
    "semantic-ui-react": "^0.88.2",
    "slash": "3.0.0",
    "ts-loader": "^7.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@storybook/addon-actions": "^5.3.18",
    "@storybook/addon-knobs": "^5.3.18",
    "@storybook/addon-links": "^5.3.18",
    "@storybook/addon-notes": "^5.3.18",
    "@storybook/addon-options": "^5.3.18",
    "@storybook/react": "^5.3.18",
    "@types/enzyme": "^3.10.5",
    "@types/jest": "^25.2.1",
    "@types/lodash": "^4.14.150",
    "@types/node": "^13.13.5",
    "@types/reach__router": "^1.3.5",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.7",
    "@types/react-helmet": "5.0.15",
    "@types/react-redux": "^7.1.8",
    "@types/react-test-renderer": "^16.9.2",
    "@types/semantic-ui": "^2.2.7",
    "@types/storybook-readme": "^5.0.4",
    "@types/webpack-env": "^1.15.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-config-xo-react": "0.23.0",
    "eslint-plugin-flowtype": "^4.7.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "flat": "^5.0.0",
    "gh-pages": "^2.2.0",
    "husky": "4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "10.2.2",
    "mkdirp": "^1.0.4",
    "plop": "^2.6.0",
    "raw-loader": "^4.0.1",
    "react-test-renderer": "^16.13.1",
    "remark-cli": "^8.0.0",
    "remark-frontmatter": "^2.0.0",
    "remark-preset-lint-recommended": "^4.0.0",
    "storybook-readme": "^5.0.8",
    "stylelint": "^13.3.3",
    "stylelint-config-standard": "^20.0.0",
    "ts-jest": "^25.5.0",
    "ts-lint": "4.5.1",
    "typescript": "^3.8.3",
    "xo": "0.30.0"
  },
  "resolutions": {
    "sharp": "^0.29.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "keywords": [
    "gatsby",
    "personal blog"
  ],
  "jest": {
    "globals": {
      "__LINK_PREFIX__": "",
      "__PREFIX_LINKS__": ""
    },
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/public/",
      "/templates/",
      "/.cache"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "lcov",
      "text",
      "html"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ],
    "*.{js,jsx}": [
      "xo --fix",
      "git add"
    ],
    "*.md": [
      "node tools/update-post-date.js",
      "remark -o ..",
      "git add"
    ],
    "*.css": [
      "stylelint"
    ]
  },
  "xo": {
    "extends": "xo-react/space",
    "space": true,
    "rules": {
      "no-case-declarations": 0,
      "default-case": 0
    },
    "ignores": [
      "**/*.tsx",
      "**/*.ts"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-lint-recommended",
      "remark-frontmatter"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "scripts": {
    "start": "yarn develop",
    "develop": "gatsby develop",
    "clean": "gatsby clean",
    "clean-build": "yarn clean && yarn build",
    "build": "gatsby build",
    "lint": "yarn lint:ts && yarn lint:md && yarn lint:js && yarn lint:css",
    "lint:ts": "tslint \"./src/**/*.ts\" \"./src/**/*.tsx\"",
    "lint:md": "remark .",
    "lint:js": "xo",
    "lint:css": "stylelint \"src/**/*.css\"",
    "lint:scss": "stylelint src/**/*.scss --syntax scss",
    "test": "yarn lint && jest",
    "test:watch": "jest --watch",
    "generate": "plop --plopfile ./generators/plopfile.js",
    "graphql-types": "graphql-codegen --config ./graphql-config.yml",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "storybook:build": "build-storybook -c .storybook -o public/docs",
    "codeclimate": "codeclimate-test-reporter < coverage/lcov.info",
    "deploy:build": "gatsby build --prefix-paths",
    "deploy:pages": "gh-pages -d public",
    "deploy": "yarn deploy:build && yarn deploy:pages"
  }
}
