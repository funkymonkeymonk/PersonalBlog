    "gatsby-plugin-typescript": "^4.4.0",
    "gatsby-remark-autolink-headers": "^5.4.0",
    "gatsby-remark-copy-linked-files": "^5.4.0",
    "gatsby-remark-images": "^6.4.0",
    "gatsby-remark-prismjs": "^6.4.0",
    "gatsby-source-filesystem": "^4.4.0",
    "gatsby-source-google-spreadsheets": "^3.0.8",
    "gatsby-transformer-json": "^4.4.0",
    "gatsby-transformer-remark": "^5.25.1",
    "gatsby-transformer-sharp": "^4.4.0",
    "gray-matter": "^4.0.2",
    "lodash": "^4.17.15",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet": "6.1.0",
    "react-redux": "^7.2.0",
    "react-scripts": "^5.0.0",
    "redux-devtools-extension": "^2.13.8",
    "semantic-ui-react": "^2.0.4",
    "slash": "4.0.0",
    "ts-loader": "^9.2.6"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@storybook/addon-actions": "^6.4.9",
    "@storybook/addon-knobs": "^6.4.0",
    "@storybook/addon-links": "^6.4.9",
    "@storybook/addon-notes": "^5.3.18",
    "@storybook/addon-options": "^5.3.18",
    "@storybook/react": "^6.4.9",
    "@types/enzyme": "^3.10.5",
    "@types/jest": "^27.4.0",
    "@types/lodash": "^4.14.150",
    "@types/node": "^17.0.6",
    "@types/reach__router": "^1.3.5",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/react-helmet": "6.1.5",
    "@types/react-redux": "^7.1.8",
    "@types/react-test-renderer": "^17.0.1",
    "@types/semantic-ui": "^2.2.7",
    "@types/storybook-readme": "^5.0.4",
    "@types/webpack-env": "^1.15.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^8.6.0",
    "eslint-config-react-app": "^7.0.0",
    "eslint-config-xo-react": "0.25.0",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "flat": "^5.0.0",
    "gh-pages": "^3.2.3",
    "husky": "^7.0.0",
    "jest": "^27.4.5",
    "lint-staged": "12.1.5",
    "mkdirp": "^1.0.4",
    "plop": "^3.0.5",
    "raw-loader": "^4.0.1",
    "react-test-renderer": "^17.0.2",
    "remark-cli": "^10.0.1",
    "remark-frontmatter": "^4.0.1",
    "remark-preset-lint-recommended": "^6.1.2",
    "storybook-readme": "^5.0.8",
    "stylelint": "^14.2.0",
    "stylelint-config-standard": "^24.0.0",
    "ts-jest": "^27.1.2",
    "ts-lint": "4.5.1",
    "typescript": "^4.5.4",
    "xo": "0.47.0"
  },
  "resolutions": {
    "sharp": "^0.29.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "keywords": [
    "gatsby",
    "personal blog"
  ],
  "jest": {
    "globals": {
      "__LINK_PREFIX__": "",
      "__PREFIX_LINKS__": ""
    },
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/public/",
      "/templates/",
      "/.cache"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "lcov",
      "text",
      "html"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ],
    "*.{js,jsx}": [
      "xo --fix",
      "git add"
    ],
    "*.md": [
      "node tools/update-post-date.js",
      "remark -o ..",
      "git add"
    ],
    "*.css": [
      "stylelint"
    ]
  },
  "xo": {
    "extends": "xo-react/space",
    "space": true,
    "rules": {
      "no-case-declarations": 0,
      "default-case": 0
    },
    "ignores": [
      "**/*.tsx",
      "**/*.ts"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-lint-recommended",
      "remark-frontmatter"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "scripts": {
    "start": "yarn develop",
    "develop": "gatsby develop",
    "clean": "gatsby clean",
    "clean-build": "yarn clean && yarn build",
    "clean-start": "yarn clean && yarn start",
    "build": "gatsby build",
    "lint": "yarn lint:ts && yarn lint:md && yarn lint:js && yarn lint:css",
    "lint:ts": "tslint \"./src/**/*.ts\" \"./src/**/*.tsx\"",
    "lint:md": "remark .",
    "lint:js": "xo",
    "lint:css": "stylelint \"src/**/*.css\"",
    "lint:scss": "stylelint src/**/*.scss --syntax scss",
    "test": "jest",
    "test:watch": "jest --watch",
    "generate": "plop --plopfile ./generators/plopfile.js",
    "graphql-types": "graphql-codegen --config ./graphql-config.yml",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "storybook:build": "build-storybook -c .storybook -o public/docs",
    "codeclimate": "codeclimate-test-reporter < coverage/lcov.info",
    "deploy:build": "gatsby build --prefix-paths",
    "deploy:pages": "gh-pages -d public",
    "deploy": "yarn deploy:build && yarn deploy:pages",
    "prepare": "husky install"
  }
}
